@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "All User";
}

<h1>All Users</h1>
<br />
<br />
<div class="row justify-content-center alig-item-center mt-3">
    <form asp-action="Index" class="row col-8 offset-1">
        <div>
            <input type="text" class="form-control" name="email"></input>
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success">
        </div>
    </form>

</div>

@if (Model.Count() > 0)
{
    <table class="mt-3 table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U=>U.Id)</td>
                <td>@Html.DisplayNameFor(U=>U.FName)</td>
                <td>@Html.DisplayNameFor(U=>U.LName)</td>
                <td>@Html.DisplayNameFor(U=>U.Email)</td>
                <td>@Html.DisplayNameFor(U=>U.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(U=>U.Roles)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var User in Model)
            {
                <tr>
                  
                    <td>@Html.DisplayFor(M=>User.Id)</td>
                    <td>@Html.DisplayFor(M=>User.FName)</td>
                    <td>@Html.DisplayFor(M=>User.LName)</td>
                    <td>@Html.DisplayFor(M=>User.Email)</td>
                    <td>@Html.DisplayFor(M=>User.PhoneNumber)</td>
                    <td>@String.Join(" " , User.Roles)</td>
           
                    <partial name="_Buttonpartialview" model="@User.Id">
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>There is No Employees !!</h3>
    </div>

}

